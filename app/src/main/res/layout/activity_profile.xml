<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgTony"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ironman"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="Tony Stark"
        android:layout_toRightOf="@id/imgTony"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="italic"
        android:layout_below="@id/txtName"
        android:textColor="#000000"
        android:layout_toRightOf="@id/imgTony"
        android:text="tonystark@starkindustries.com"/>

    <TextView
        android:id="@+id/txtPhoneNuber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_toRightOf="@id/imgTony"
        android:layout_below="@id/txtEmail"
        android:textColor="@color/design_default_color_primary_dark"
        android:text="+91 8765420089"/>

    <Button
        android:id="@+id/btnMoreInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="More information"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_margin="20dp"
        android:layout_below="@id/imgTony"
        android:background="#ffff33"/>

    <Button
        android:id="@+id/btnExitApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="@color/red"
        android:text="Exit App"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>